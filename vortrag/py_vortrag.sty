\NeedsTeXFormat{LaTeX2e}
\RequirePackage{listings}
\ProvidesPackage{uebungen}


%some colors emacs colors for python listings:
\definecolor{keywords}{rgb}{0.63,0.13,0.94}
\definecolor{identifiers}{rgb}{0,0,0} 
\definecolor{comments}{rgb}{0.7,0.13,0.13}
\definecolor{strings}{rgb}{0.37,0.37,0.37}

\definecolor{classnames}{rgb}{0.13, 0.55, 0.13}
\definecolor{funcnames}{rgb}{0,0,1}

%shell prompt:
\definecolor{prompt}{rgb}{0,0,1}

%other:
\definecolor{lightgrey}{rgb}{0.9, 0.9, 0.9}
\definecolor{black}{rgb}{0, 0, 0}


%default python listings:
\lstdefinestyle{Python}
{
  language=Python,
  basicstyle=\ttfamily,
  showstringspaces=false,
  frame=single,
  framerule=0.5pt,
  stringstyle=\color{strings},
  keywordstyle=\color{keywords},
  commentstyle=\color{comments},
  identifierstyle=\color{identifiers},
  emph={[10]self}, emphstyle={[10]\color{keywords}},
  emph={[11]yield}, emphstyle={[11]\color{keywords}},
}


%default sehll listings:
\lstdefinestyle{Shell}
{
  language=Bash,
  basicstyle=\ttfamily,
  showstringspaces=false,
  backgroundcolor=\color{lightgrey},
  frame=none,
  stringstyle=\color{black},
  keywordstyle=\color{black},
  commentstyle=\color{black},
  identifierstyle=\color{black},
  emph={[10]\$,>>>}, emphstyle={[10]\color{prompt}}
}


%Default
\lstset{style=Python}
